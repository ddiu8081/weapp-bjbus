/* pages/components/error-page/index.wxss */
.container-func-sk {
  position: absolute;
  width: 100%;
  box-sizing: border-box;
  top: 0;
  bottom: 0;
}

.sk-stop-item {
  margin: 24rpx 40rpx;
  background-color: #fff;
  padding: 24rpx 30rpx;
  box-shadow: 0 3rpx 5rpx hsla(220,4%,58%,.1);
  opacity: .8;
}

.sk-title {
  display: inline-block;
  width: 240rpx;
  height: 20rpx;
  background-color: #f2f2f2;
  margin: 16rpx 0;
}

.sk-title.right {
  float: right;
  width: 80rpx;
}

.sk-content {
  margin: 20rpx 0;
}

.sk-content-text {
  width: 100%;
  height: 18rpx;
  background-color: #f6f6f6;
  margin-top: 24rpx;
}

.sk-content-text.short {
  width: 210rpx;
}