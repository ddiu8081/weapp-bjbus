.bustime-card {
  background: #ffffff;
  height: 368rpx;
  margin: 32rpx 40rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border:1rpx solid #eeeeee;
  font-size: 28rpx;
}

.bustime-card .info {
  display: flex;
  background: #ffffff;
  height: 240rpx;
  border-bottom: 1px solid #eeeeee;
  align-items: center;
  text-align: center;
}

.bustime-card .info .toast {
  flex: 1;
  font-size: 28rpx;
  color: #c0c4cc;
}

.bustime-card .control {
  display: flex;
  background: #fbfbfb;
  height: 128rpx;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  padding: 0 24rpx;
}

.bustime-card .control .item {
  width: 140rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.bustime-card .control .item:active {
  opacity: 0.8;
}

.bustime-card .control .item image {
  width: 44rpx;
  height: 44rpx;
}

.bustime-card .control .item span {
  display: block;
  font-size: 20rpx;
  color: #909399;
}

.stop-list {
  width: 100%;
  font-size: 32rpx;
  display: flex;
  justify-content: flex-start;
}

.popover {
  position: absolute;
  background-color: #ffffff;
}

.stop-list .stop-item {
  width: 50rpx;
}

.stop-item .bus-icon {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-bottom: solid 10rpx #dddddd;
  padding: 16rpx 0;
}

.stop-item.bus-item-next .bus-icon::after {
  content: "";
  position: absolute;
  width: 80rpx;
  height: 10rpx;
  top: 82rpx;
  background-color: #AAB2BD;
  /* border-bottom: solid 10rpx #666666; */
}

.bus-icon .bus-icon-img {
  position: relative;
  width: 46rpx;
  height: 46rpx;
  overflow: visible;
}

.bus-icon .bus-icon-img .dot {
  position: absolute;
  transform-origin: 0 center;
  font-size: 18rpx;
  top: -4rpx;
  right: -4rpx;
  height: 24rpx;
  width: 24rpx;
  line-height: 24rpx;
  text-align: center;
  border-radius: 100%;
  color: #303133;
  background-color: #FFDD79;
  border:1px solid #909399;
  z-index: 10;
}

.stop-item .stop-name-item {
  position: relative;
  text-align: center;
  font-size: 32rpx;
  color: #515151;
  margin-top: 20rpx;
}

.stop-item .stop-name-item.stop::before {
  content: "";
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background-color: #cccccc;
  top: -37rpx;
  left: 12rpx;
}

.stop-item.bus-item-next .stop-name-item.stop::before {
  content: "";
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background-color: #FFDD79;
  top: -37rpx;
  left: 12rpx;
}

.stop-item .this-stop .stop-item-name {
  color: #FCBB42;
  background: #ffffff;
  border-radius: 10rpx;
}

/* STOP CARD */

.stop-card {
  background: #ffffff;
  margin: 24rpx 30rpx;
  /* border-radius: 8rpx; */
  overflow:hidden;
  border:1rpx solid #f0f0f0;
  font-size: 28rpx;
  border-radius: 50%;
}

.stop-card-header {
  margin: 20rpx 30rpx;
}

.stop-card-content {
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  margin:20rpx 30rpx;
}

.stop-card-content-first {
  margin:0
}

/* STOP CARD CONTENT DETAIL */

.bus-item-detail {
  display: flex;
  width:100%;
  box-sizing:border-box;
  flex-wrap: nowrap;
  justify-content: space-between;
  height: 130rpx;
  border-top: 1rpx solid #f0f0f0;
  align-items: center;
  /* justify-content: center; */
}

.bus-item-detail .businfo {
  margin-left: 30rpx;
}

.bus-item-detail .businfo .direction {
  color: #bbbec4;
}

.bus-item-detail .bustime {
  position: relative;
  display: flex;
  width: 50%;
  height: 130rpx;
  align-items: center;
  text-align: right;
  justify-content: flex-end;
}

.bus-item-detail .bustime .bustime-item {
  display: inline-block;
  text-align: right;
}

.bus-item-detail .bustime .bustime-item-2 {
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid hsla(220,4%,58%,.2);
  opacity: .5;
}

.bus-item-detail .bustime .bustime-item-3 {
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding-right: 25rpx;
  padding-left: 25rpx;
  border-left: 1rpx solid hsla(220,4%,58%,.2);
}

.bus-item-detail .bustime .poi {
  font-size: 32rpx;
}

.bus-item-detail .bustime .poi-blue {
  color: #6190e8;
}

.bus-item-detail .bustime .poi-aqua {
  color: #41cac0;
}

.bus-item-detail .bustime .poi-green {
  color: #87d068;
}

.bus-item-detail .bustime .poi-yellow {
  color: #E6A23C;
}

.bus-item-detail .bustime .poi-grey {
  color: #909399;
}

.bus-item-detail .bustime .poi-disabled {
  color: #bbbec4;
}

.bus-item-detail .bustime .distance {
  color: #bbbec4;
  font-size: 22rpx;
}